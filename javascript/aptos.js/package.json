{
  "name": "@switchboard-xyz/aptos.js",
  "description": "API wrapper for intergating with the Switchboardv2 program on Aptos",
  "version": "2.6.3",
  "license": "MIT",
  "bin": {
    "sbv2-aptos": "./sbv2-aptos.ts"
  },
  "files": [
    "lib",
    "src",
    "sbv2-aptos.ts",
    "package.json"
  ],
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/cjs/index.d.ts",
  "scripts": {
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc",
    "build": "npm run build:cjs && npm run build:esm",
    "watch": "tsc -p tsconfig.cjs.json --watch",
    "lint": "eslint --fix-dry-run --ext .ts src/**/*.ts",
    "prepublishOnly": "shx rm -rf lib && npm run build",
    "test": "node ./node_modules/mocha/bin/mocha --loader=ts-node/esm --extension ts --timeout 10000 ./tests/*.tests.ts",
    "test:old": "ts-mocha -p ./tsconfig.cjs.json --require ts-node/register -t 1000000 ./tests/*.tests.ts"
  },
  "dependencies": {
    "@switchboard-xyz/common": "^2.1.29",
    "aptos": "^1.6.0",
    "big.js": "^6.2.1",
    "bn.js": "^5.2.1",
    "chalk": "^5.0.1",
    "js-sha3": "^0.8.0",
    "node-fetch": "^2.1.6"
  },
  "devDependencies": {
    "@types/big.js": "^6.1.6",
    "@types/bn.js": "^5.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.6.4",
    "@types/node-fetch": "^2.6.2",
    "@types/yargs": "^17.0.11",
    "mocha": "^10.2.0",
    "shx": "^0.3.4",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "yaml": "^2.1.1",
    "yargs": "^17.5.1"
  },
  "pre-commit": [
    "build"
  ]
}
